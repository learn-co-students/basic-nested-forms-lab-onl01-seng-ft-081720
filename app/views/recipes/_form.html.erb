<%= form_for @recipe do |f| %>
    <%= f.label "Recipe title:" %>
    <%= f.text_field :title %><br>

    <%= f.fields_for :ingredients do |ing| %>
        <%= ing.label :name %>
        <%= ing.text_area :name %><br>

        <%= ing.label :quantity %>
        <%= ing.text_area :quantity %><br>
        
    <% end %>

    <%= f.submit %>
<% end %>